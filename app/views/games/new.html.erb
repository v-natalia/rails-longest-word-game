<h1>Game</h1>
<div class="container">

 <% @letters.each do |letter| %>
  <div class="card"><%= letter %></div>
  <% end %>
</div>
<div class ="form">
  <h2>What is the longest word you can find?</h2>
    <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
      <input type="text" name="longest_word" placeholder="your word">
      <input type="submit">
    </form >
</div>
<%= link_to "Play again", '/new' %>
